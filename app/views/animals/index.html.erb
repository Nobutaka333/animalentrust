        <%= link_to "#{current_user.nickname}さん", root_path, class: :greeting__link%>
        <%= "としてログイン中です" %>
      </div>
    <% end %>
    <div class="card__wrapper">
      <%= render partial: 'animal', collection: @animals %>
    </div>
  </div>
</main>