<div class="card">
 <%= link_to image_tag(animal.image, class: :card__img), animal_path(animal.id) %>

  <div class="card__body">
    <%= link_to animal.name, animal_path(animal.id), class: :card__name%>
    <p class="card__summary">
      <%= " #{animal.prefecture.name} #{animal.animal_area}" %>
      </p>
    <%= link_to animal.user.nickname, root_path, class: :card__user %>
  </div>
</div>